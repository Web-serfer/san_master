---
import "@styles/global.css"
import Header from "@components/layouts/header/Header.astro"
import Footer from "@components/layouts/Footer.astro"

// Основные метаданные по умолчанию
const siteTitle = "SAN MASTER - Найм сантехника в Ижевске";
const siteDescription = "Рекламный сервис по найму профессиональных сантехников в Ижевске. Размещайте объявления, находите исполнителей, решайте задачи быстро и надежно.";
const siteUrl = "https://sanmaster-izhevsk.ru";
const siteType = "website";
const siteImage = "/og-image.jpg";
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<title>{siteTitle}</title>
		<meta name="description" content={siteDescription} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={siteUrl} />
	</head>
	<body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
		<script>
			// Запуск анимаций появления при загрузке DOM
			document.addEventListener('DOMContentLoaded', () => {
				// Небольшая задержка для уверенности, что все элементы загружены
				setTimeout(() => {
					// Запускаем анимации для элементов с классами animate-fadeIn*
					const animatedElements = document.querySelectorAll('[class*=\"animate-fadeIn\"]');
					animatedElements.forEach(element => {
						// Убедимся, что анимация запускается
						element.style.opacity = '0';
						// Принудительно запускаем перерисовку
						void element.offsetWidth;
						// Убираем opacity-0 чтобы анимация сработала
						if (element.classList.contains('opacity-0')) {
							element.classList.remove('opacity-0');
						}
					});
				}, 100);
			});
		</script>
	</body>
</html>


