---
import Logo from '@components/Logo.astro'
import Navbar from '@components/Navbar.astro'
---

<header class="bg-gradient-to-r from-[var(--header-bg-start)] to-[var(--header-bg-end)] text-[var(--header-text)] py-4 sticky top-0 z-50 border-b border-[var(--border-color)] opacity-0 animate-fadeInHeader no-shadow">
  <div class="content-container flex justify-between items-center">
    <Logo />

    <Navbar />
  </div>
</header>

<script>
  // Функция для добавления/удаления тени при прокрутке
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('header');
    
    const handleScroll = () => {
      if (window.scrollY > 0) {
        header.classList.add('shadow-md');
        header.classList.remove('no-shadow');
      } else {
        header.classList.remove('shadow-md');
        header.classList.add('no-shadow');
      }
    };

    // Добавляем обработчик события прокрутки
    window.addEventListener('scroll', handleScroll);
    
    // Проверяем начальное состояние
    handleScroll();
  });
</script>

<style>
  .no-shadow {
    box-shadow: none;
  }
</style>